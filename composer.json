{
    "name": "bibboxen/bibbox-configuration-management",
    "description": "Application to manage configuration for chromebox bibbox machines.",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "composer/package-versions-deprecated": "^1.10",
        "doctrine/annotations": "^1.10",
        "doctrine/doctrine-bundle": "^2.1",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.7",
        "easycorp/easyadmin-bundle": "^3.1",
        "symfony/console": "^5.3",
        "symfony/dotenv": "^5.3",
        "symfony/expression-language": "^5.3",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "^5.3",
        "symfony/monolog-bundle": "^3.5",
        "symfony/security-bundle": "^5.3",
        "symfony/serializer": "^5.3",
        "symfony/twig-bundle": "^5.3",
        "symfony/validator": "^5.3",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "^5.3"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "escapestudios/symfony2-coding-standard": "^3.11",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.9",
        "symfony/maker-bundle": "^1.21"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "apply-coding-standards": [
            "@apply-coding-standards/php-cs-fixer",
            "@apply-coding-standards/phpcs"
        ],
        "check-coding-standards": [
            "@check-coding-standards/php-cs-fixer",
            "@check-coding-standards/phpcs"
        ],
        "check-coding-standards/php-cs-fixer": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --format=checkstyle"
        ],
        "check-coding-standards/phpcs": [
            "phpcs --standard=phpcs.xml.dist"
        ],
        "apply-coding-standards/php-cs-fixer": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "apply-coding-standards/phpcs": [
            "phpcbf --standard=phpcs.xml.dist"
        ],
        "actions/phpcs": [
            "phpcs --standard=phpcs.xml.dist --report=checkstyle"
        ],
        "actions/phpcsfixer": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --diff --diff-format=udiff"
        ],
        "frontend-test": "docker-compose exec -T frontend bash -c 'npm run test-ci'"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.3.*"
        }
    }
}
